.container
  / Page Heading/Breadcrumbs
  .row
    .col-lg-12
      %h1.page-header
        = "#{@inventory.item_type}"
        %small Add one here
      %ol.breadcrumb
        %li
          %a{:href => "/"} Home
        %li
          %a{:href => "/inventories"} Item Types
        %li
          = link_to "#{@inventory.item_type}", inventory_sub_items_path(@inventory)
        %li.active 
          = "adding #{@inventory.item_type}"
  .row
    .col-md-1
    .col-md-5
      %h3
        = "Add a new #{@inventory.item_type}"
      = form_for [@inventory, @subitem] do |f|
        = f.label :type
        %br/
        = f.text_field :type
        %br/
        %br/
        = f.label :name 
        %br/
        = f.text_field :name
        %br/
        %br/
        = f.label :price
        %br/
        = f.number_field :price
        %br/
        %br/
        = f.submit "Add"