.container
  / Page Heading/Breadcrumbs
  .row
    .col-lg-12
      %h1.page-header
        Store Inventory
        %small The things we have!
      - if user_signed_in?
        %ol.breadcrumb
          %li
            %a{:href => "/"} Home
          %li.active
            = link_to "add inventory", new_inventory_path

  .row
    - @inventories.each do |inventory|
      .col-md-4.img-portfolio
        %a{:href => "portfolio-item.html"}
          %img.img-responsive.img-hover.paperclip      
            = image_tag inventory.avatar.url
        %h3
          = link_to "#{inventory.item_type}", inventory_sub_items_path(inventory)
          - if user_signed_in?
            |
            = link_to "Edit", edit_inventory_path(inventory)
            |
            = link_to "Delete", inventory_path(inventory), method: :delete
        = "#{inventory.disc}"
